    </description>
    

    <dependencies>
        <dependency>
        	<groupId>org.github.phpmaven</groupId>
        	<artifactId>maven-php-exec</artifactId>
        </dependency>
        <dependency>
        	<groupId>org.github.phpmaven</groupId>
