<project>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.phpmaven</groupId>
	<artifactId>maven-php-plugin</artifactId>
	<packaging>maven-plugin</packaging>
	<version>1.0-ALPHA</version>
	<name>PHP - Maven-plugin</name>
	<url>http://www.php-maven.org</url>
	<description>Java like maven-lifecycle for php.</description>
	<licenses>
		<license>
			<name>Apache 2</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
			<comments>A business-friendly OSS license</comments>
		</license>
	</licenses>
	<issueManagement>
		<system>Trac</system>
		<url>http://trac.php-maven.org/</url>
	</issueManagement>
	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>repo1.php-maven.org</id>
			<name>repo1-release</name>
			<url>ftp://195.30.248.185/release</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>repo1.php-maven.org</id>
			<name>repo1-snapshot</name>
			<url>ftp://195.30.248.185/snapshot</url>
		</snapshotRepository>
		<site>
			<id>www.php-maven.org</id>
			<url>ftp://195.30.248.185</url>
		</site>
	</distributionManagement>
	<developers>
		<developer>
			<id>cw</id>
			<name>Christian Wiedemann</name>
			<email>christian.wiedemann@key-tec.de</email>
			<roles>
				<role>Project Manager</role>
				<role>Architect</role>
			</roles>
			<organization>KEY-TEC</organization>
			<timezone>-2</timezone>
		</developer>
	</developers>
